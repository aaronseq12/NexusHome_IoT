{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/nexushome-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 10485760,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=NexusHomeDb;Trusted_Connection=true;MultipleActiveResultSets=true;",
    "IoTHub": "HostName=nexushome-iothub.azure-devices.net;SharedAccessKeyName=iothubowner;SharedAccessKey=YOUR_IOTHUB_KEY",
    "ServiceBus": "Endpoint=sb://nexushome.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=YOUR_SERVICEBUS_KEY",
    "CosmosDb": "AccountEndpoint=https://nexushome-cosmos.documents.azure.com:443/;AccountKey=YOUR_COSMOS_KEY;",
    "Redis": "nexushome-redis.redis.cache.windows.net:6380,password=YOUR_REDIS_KEY,ssl=True,abortConnect=False"
  },
  "JwtSettings": {
    "Issuer": "NexusHome",
    "Audience": "NexusHomeUsers",
    "SecretKey": "SuperSecretKeyForJWTWhichNeedsToBeAtLeast256BitsLong!@#$%",
    "ExpirationInMinutes": 60
  },
  "AzureIoTHub": {
    "ConnectionString": "HostName=nexushome-iothub.azure-devices.net;SharedAccessKeyName=iothubowner;SharedAccessKey=YOUR_KEY",
    "DeviceProvisioningService": {
      "IdScope": "0ne00XXXXXX",
      "ConnectionString": "HostName=global.azure-devices-provisioning.net;SharedAccessKeyName=provisioningserviceowner;SharedAccessKey=YOUR_DPS_KEY"
    }
  },
  "MQTT": {
    "BrokerHost": "localhost",
    "BrokerPort": 1883,
    "Username": "",
    "Password": "",
    "ClientId": "NexusHomeServer",
    "KeepAlivePeriod": 60,
    "CleanSession": true,
    "Topics": {
      "DeviceData": "nexushome/devices/+/data",
      "DeviceCommands": "nexushome/devices/+/commands",
      "EnergyData": "nexushome/energy/+/consumption",
      "SolarData": "nexushome/solar/+/generation",
      "BatteryData": "nexushome/battery/+/status",
      "Alerts": "nexushome/alerts/+"
    }
  },
  "Matter": {
    "FabricId": "0x1234567890ABCDEF",
    "NodeId": "0x1",
    "VendorId": "0xFFF1",
    "ProductId": "0x8000",
    "CommissioningTimeout": 300,
    "EnableIPv6": true,
    "EnableThread": true,
    "EnableWiFi": true
  },
  "EnergyManagement": {
    "SamplingIntervalSeconds": 10,
    "DataRetentionDays": 365,
    "PeakHours": {
      "Start": "17:00",
      "End": "21:00"
    },
    "OffPeakHours": {
      "Start": "22:00", 
      "End": "06:00"
    },
    "EnergyRates": {
      "PeakRate": 0.25,
      "StandardRate": 0.18,
      "OffPeakRate": 0.12,
      "SolarFeedInRate": 0.08
    },
    "OptimizationSettings": {
      "EnableAutomation": true,
      "AggressiveMode": false,
      "ComfortThreshold": 2.0,
      "MaxCostSavingsPercent": 30
    }
  },
  "PredictiveMaintenance": {
    "ModelUpdateIntervalHours": 24,
    "PredictionHorizonDays": 30,
    "ConfidenceThreshold": 0.8,
    "AlertThresholds": {
      "Critical": 0.9,
      "Warning": 0.7,
      "Info": 0.5
    },
    "FeatureImportanceThreshold": 0.05
  },
  "AI": {
    "Models": {
      "EnergyPrediction": {
        "ModelPath": "Models/energy_prediction_model.zip",
        "RetrainingIntervalHours": 168,
        "MinDataPointsForTraining": 1000
      },
      "MaintenancePrediction": {
        "ModelPath": "Models/maintenance_prediction_model.zip", 
        "RetrainingIntervalHours": 720,
        "MinDataPointsForTraining": 5000
      },
      "AnomalyDetection": {
        "ModelPath": "Models/anomaly_detection_model.zip",
        "SensitivityLevel": 0.8,
        "WindowSize": 24
      }
    },
    "OpenAI": {
      "ApiKey": "YOUR_OPENAI_API_KEY",
      "Model": "gpt-4",
      "MaxTokens": 500,
      "Temperature": 0.7
    }
  },
  "DeviceTypes": {
    "SupportedDevices": [
      {
        "Type": "SmartThermostat",
        "Manufacturer": "Nest",
        "Protocol": "Matter",
        "PowerConsumption": 3.5,
        "Features": ["Temperature", "Humidity", "Occupancy", "Learning"]
      },
      {
        "Type": "SmartLight",
        "Manufacturer": "Philips Hue", 
        "Protocol": "Matter",
        "PowerConsumption": 9.0,
        "Features": ["Dimming", "ColorChange", "MotionSensor", "Scheduling"]
      },
      {
        "Type": "SmartSwitch",
        "Manufacturer": "TP-Link Kasa",
        "Protocol": "WiFi",
        "PowerConsumption": 1.0,
        "Features": ["PowerMonitoring", "Scheduling", "RemoteControl"]
      },
      {
        "Type": "EnergyMeter",
        "Manufacturer": "Schneider Electric",
        "Protocol": "Modbus",
        "PowerConsumption": 2.0,
        "Features": ["PowerMeasurement", "EnergyCalculation", "DataLogging"]
      },
      {
        "Type": "SolarInverter",
        "Manufacturer": "SolarEdge",
        "Protocol": "SunSpec Modbus",
        "PowerConsumption": 15.0,
        "Features": ["DCtoACConversion", "PowerOptimization", "Monitoring"]
      },
      {
        "Type": "BatteryStorage",
        "Manufacturer": "Tesla Powerwall",
        "Protocol": "TCP/IP",
        "PowerConsumption": 5.0,
        "Features": ["EnergyStorage", "GridTie", "BackupPower", "LoadBalancing"]
      }
    ]
  },
  "Notifications": {
    "Email": {
      "SmtpServer": "smtp.gmail.com",
      "SmtpPort": 587,
      "Username": "nexushome@gmail.com",
      "Password": "YOUR_EMAIL_PASSWORD",
      "EnableSsl": true,
      "FromAddress": "nexushome@gmail.com",
      "FromDisplayName": "NexusHome Smart System"
    },
    "SMS": {
      "TwilioAccountSid": "YOUR_TWILIO_SID",
      "TwilioAuthToken": "YOUR_TWILIO_TOKEN",
      "FromPhoneNumber": "+1234567890"
    },
    "PushNotification": {
      "FirebaseServerKey": "YOUR_FIREBASE_KEY",
      "ApnsKeyId": "YOUR_APNS_KEY_ID",
      "ApnsTeamId": "YOUR_TEAM_ID"
    }
  },
  "Security": {
    "EncryptionKey": "SuperSecretEncryptionKey256Bits!@#$%^&*()_+",
    "AllowedHosts": "*",
    "RequireHttps": true,
    "EnableRateLimiting": true,
    "RateLimitRequests": 100,
    "RateLimitWindowMinutes": 15,
    "EnableDeviceAuthentication": true,
    "CertificateThumbprint": "YOUR_CERTIFICATE_THUMBPRINT"
  },
  "Monitoring": {
    "ApplicationInsights": {
      "InstrumentationKey": "YOUR_APP_INSIGHTS_KEY"
    },
    "HealthChecks": {
      "IntervalSeconds": 30,
      "TimeoutSeconds": 10,
      "EnableDetailedErrors": true
    }
  },
  "AllowedHosts": "*"
}