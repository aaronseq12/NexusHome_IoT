{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=NexusHomeIoT;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true",
    "Redis": "localhost:6379",
    "InfluxDB": "http://localhost:8086"
  },
  "JwtAuthentication": {
    "SecretKey": "NexusHome-SuperSecure-JWT-SigningKey-2025-Version",
    "Issuer": "NexusHome.IoT",
    "Audience": "NexusHome.Clients",
    "ExpirationInMinutes": 1440,
    "RefreshTokenExpirationInDays": 7
  },
  "MqttBroker": {
    "Host": "localhost",
    "Port": 1883,
    "Username": "nexususer",
    "Password": "NexusHome@2025!",
    "ClientId": "NexusHome-Server",
    "Topics": {
      "DeviceStatus": "nexushome/devices/+/status",
      "EnergyData": "nexushome/energy/+/data",
      "Commands": "nexushome/commands/+",
      "Alerts": "nexushome/alerts/+",
      "Telemetry": "nexushome/telemetry/+"
    }
  },
  "WeatherApi": {
    "BaseUrl": "https://api.openweathermap.org/data/2.5",
    "ApiKey": "",
    "Units": "metric",
    "RefreshIntervalMinutes": 15
  },
  "EnergyOptimization": {
    "PredictionWindowHours": 24,
    "OptimizationIntervalMinutes": 5,
    "MaxPowerDraw": 10000,
    "CostThreshold": 0.25,
    "EnableAutomaticOptimization": true
  },
  "PredictiveMaintenance": {
    "ModelPath": "AI/Models/maintenance-prediction.zip",
    "PredictionIntervalHours": 6,
    "MaintenanceThreshold": 0.8,
    "AlertThreshold": 0.6
  },
  "DeviceConfiguration": {
    "AutoDiscoveryEnabled": true,
    "HeartbeatIntervalSeconds": 30,
    "MaxOfflineTimeMinutes": 5,
    "SupportedProtocols": ["MQTT", "HTTP", "CoAP", "Matter"]
  },
  "SecuritySettings": {
    "EnableRateLimiting": true,
    "MaxRequestsPerMinute": 1000,
    "EnableIpWhitelist": false,
    "RequireHttps": true,
    "EnableCors": true,
    "SessionTimeoutMinutes": 30
  },
  "Notifications": {
    "EnableEmailNotifications": false,
    "EnableSmsNotifications": false,
    "EnablePushNotifications": true,
    "EmailSettings": {
      "SmtpHost": "",
      "SmtpPort": 587,
      "Username": "",
      "Password": "",
      "FromAddress": "notifications@nexushome.com"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information",
      "NexusHome.IoT": "Debug"
    },
    "Console": {
      "IncludeScopes": true
    },
    "File": {
      "Path": "logs/nexushome-.txt",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 30,
      "FileSizeLimitBytes": 104857600
    },
    "Seq": {
      "ServerUrl": "http://localhost:5341",
      "ApiKey": ""
    }
  },
  "HealthChecks": {
    "UI": {
      "EvaluationTimeInSeconds": 10,
      "MinimumSecondsBetweenFailureNotifications": 300
    }
  },
  "Performance": {
    "EnableResponseCaching": true,
    "CacheDurationSeconds": 300,
    "EnableResponseCompression": true,
    "MaxConcurrentRequests": 1000
  },
  "Features": {
    "EnableAdvancedAnalytics": true,
    "EnableMachineLearning": true,
    "EnableVoiceControl": false,
    "EnableMobileApp": true,
    "EnableWebInterface": true
  },
  "AllowedHosts": "*"
}
